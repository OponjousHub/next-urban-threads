generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(cuid())
  email        String         @unique
  pendingEmail      String?
  emailVerifyToken  String?
  emailTokenExpiry  DateTime?

  tenant   Tenant @relation(fields: [tenantId], references: [id])
  tenantId String
  
  name         String?
  createdAt    DateTime       @default(now())
  address      String?
  city         String?
  country      String?
  password     String
  phone        String?
  role         Role           @default(USER)
  avatarUrl    String?  // ðŸ‘ˆ optional
  isDeleted    Boolean        @default(false)
  deletedAt    DateTime?

  updatedAt    DateTime       @updatedAt
  status       AccountStatus  @default(ACTIVE)
  cartItems    CartItem[]
  orders       Order[]
  addresses      Address[]
  products     Product[]      @relation("UserProduct")
  reviews      Review[]
  wishlistItem WishlistItem[]
}

model Product {
  id              String         @id @default(cuid())
  tenantId        String
  price           Decimal        @db.Decimal(10, 2)
  discountedPrice Decimal?       @db.Decimal(10, 2)
  name            String
  slug            String         
  description     String?
  images          String[]
  thumbnail       String
  sizes           String[]
  colours         String[]
  stock           Int            @default(0)
  instock         Boolean        @default(true)
  featured        Boolean         @default(false)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  category        Category
  subCategory     String

  // isDeleted       Boolean        @default(false)
  deletedAt       DateTime?

  seoTitle        String?
  seoDescription  String?
  createdById       String?
  createdByName   String?
  cartItems       CartItem[]
  orderItems      OrderItem[]
  tenant          Tenant @relation(fields: [tenantId], references: [id])
  user            User?          @relation("UserProduct", fields: [createdById], references: [id])
  reviews         Review[]
  wishlistItem    WishlistItem[]
  @@index([tenantId])
  @@unique([tenantId, slug])
}

model Order {
  id              String      @id @default(cuid())
  userId          String
  user            User        @relation(fields: [userId], references: [id])
  tenant          Tenant @relation(fields: [tenantId], references: [id])
  tenantId        String
  totalAmount     Decimal
  status          OrderStatus @default(PENDING)
  paymentStatus   PaymentStatus @default(PENDING)
  paymentMethod   String
  shippingAddressId  String
  shippingAddress    Address  @relation(fields: [shippingAddressId], references: [id])
  currency       String
  paymentProvider PaymentProvider
  paymentReference String    @unique
  items           OrderItem[]
  createdAt       DateTime    @default(now())
  @@index([tenantId])
}


model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  tenantId  String
  productId String
  quantity  Int
  price     Decimal @db.Decimal(10, 2)
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

model Address {
id String @id @default(cuid())
userId String
tenantId  String

fullName String?
phone String?
street String
city String
state String?
postalCode String?
country String
orders Order[]

isDeleted Boolean  @default(false)
isDefault Boolean @default(false)
isTemporary  Boolean  @default(false)

createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
user User @relation(fields: [userId], references: [id], onDelete: Cascade)
tenant   Tenant @relation(fields: [tenantId], references: [id])
}

model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  domain    String?
  isDefault Boolean  @default(false)

  users     User[]
  orders    Order[]
  products  Product[]
  address   Address[]
  WishlistItem WishlistItem[]
  cartItem  CartItem[]
  review    Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  tenantId  String
  rating    Int
  comment   String
  createdAt DateTime @default(now())
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  tenant    Tenant   @relation(fields: [tenantId], references: [id])

  @@unique([userId, productId])
  @@index([tenantId])
}

model CartItem {
  id        String  @id @default(cuid())
  userId    String
  tenantId  String
  productId String
  quantity  Int
  product   Product @relation(fields: [productId], references: [id])
  user      User    @relation(fields: [userId], references: [id])
  tenant    Tenant  @relation(fields: [tenantId], references: [id])
  @@index([tenantId])
}

model WishlistItem {
  id        String  @id @default(cuid())
  userId    String
  tenantId  String
  productId String
  product   Product @relation(fields: [productId], references: [id])
  user      User    @relation(fields: [userId], references: [id])
  tenant    Tenant  @relation(fields: [tenantId], references: [id])
  @@index([tenantId])
}

enum Role {
  USER
  ADMIN
}

enum Category {
  MEN
  WOMEN
  ASSECCORIES
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
  PROCESSING
}

enum PaymentProvider {
  PAYSTACK
  FLUTTERWAVE
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}

enum Currency {
  NGN
  USD
}

enum AccountStatus {
  ACTIVE
  SUSPENDED
  DEACTIVATED
}